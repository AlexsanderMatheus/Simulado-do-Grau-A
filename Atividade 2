#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    // Inicializa o gerador de números aleatórios
    srand(time(NULL));

    // a. Sorteia um número entre 130 e 670
    int num1 = (rand() % (670 - 130 + 1)) + 130;
    printf("Número sorteado entre 130 e 670: %d\n", num1);

    // b. Sorteia um número entre -20 e -5
    int num2 = (rand() % (-5 - (-20) + 1)) - 20;
    printf("Número sorteado entre -20 e -5: %d\n", num2);

    // c. Sorteia um número entre -10 e 10
    int num3 = (rand() % (10 - (-10) + 1)) - 10;
    printf("Número sorteado entre -10 e 10: %d\n", num3);

    // d. Sorteia um número entre 10.5 e 50.2 com uma casa decimal
    float num4 = ((rand() % (502 - 105 + 1)) + 105) / 10.0; // Multiplica por 10 para lidar com a casa decimal
    printf("Número sorteado entre 10.5 e 50.2: %.1f\n", num4);

    // e. Sorteia um número entre 0 e 100 que seja múltiplo de 5
    int num5 = (rand() % 21) * 5; // 0 a 20 multiplicado por 5
    printf("Número sorteado entre 0 e 100, múltiplo de 5: %d\n", num5);

    // f. Sorteia um caractere entre 'A' (65) e 'Z' (90)
    char letra = (rand() % (90 - 65 + 1)) + 65;
    printf("Caractere sorteado entre 'A' e 'Z': %c\n", letra);

    return 0;
}
