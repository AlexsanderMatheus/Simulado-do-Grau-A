#include <stdio.h>

int main() {
    float chuva[7];
    float total = 0;
    float maiorChuva = 0;
    int diaMaiorChuva = 0;
    int alertaSeca = 0;

    // Lê os registros de chuva para cada dia da semana
    for (int i = 0; i < 7; i++) {
        printf("Digite a quantidade de chuva no dia %d (em mm): ", i + 1);
        scanf("%f", &chuva[i]);
        total += chuva[i]; // Acumula o total de chuva

        // Verifica se a quantidade de chuva é a maior até agora
        if (chuva[i] > maiorChuva) {
            maiorChuva = chuva[i];
            diaMaiorChuva = i + 1; // Armazena o dia (1 a 7)
        }

        // Verifica se a chuva foi menor que 5 mm
        if (chuva[i] < 5.0) {
            alertaSeca = 1;
        }
    }

    // Exibe os resultados
    printf("\nTotal de chuva acumulada na semana: %.2f mm\n", total);
    printf("Dia com maior quantidade de chuva: Dia %d (%.2f mm)\n", diaMaiorChuva, maiorChuva);

    // Exibe alerta sobre possível seca
    if (alertaSeca) {
        printf("Alerta: Em algum dia a chuva foi menor que 5 mm, possivel seca!\n");
    } else {
        printf("A chuva foi adequada em todos os dias.\n");
    }

    return 0;
}
